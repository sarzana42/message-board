 <%= form_for(@message) do |f| %>
 <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10">
                  名前:
                  <%= f.text_field :name %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                  内容:
                  <%= f.text_area :body %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                  <%= f.submit %>
                </div>
            </div>
        </form>
    <% end %>
