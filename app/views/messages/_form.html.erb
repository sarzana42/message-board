 <%= form_for(@message) do |f| %>
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10">
                  名前:
                  <%= f.text_field :name %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                  内容:
                  <%= f.text_area :body %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                  <%= f.submit %>
                </div>
            </div>
        </form>
    <% end %>
